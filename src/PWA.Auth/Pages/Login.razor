@page "/login"
@inject IAuthService AuthService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Connexion - MaesAuth</PageTitle>

<div class="login-page">
    <div class="login-card">
        <div class="logo-section">
            <h2>üîê MaesAuth</h2>
            <p class="subtitle">Syst√®me d'authentification centralis√©</p>
        </div>

        @if (!requiresMfa)
        {
            <!-- √âtape 1 : Login classique -->
            <LoginForm 
                IsLoading="@isLoading"
                ErrorMessage="@errorMessage"
                OnLoginSubmit="HandleLogin" />
        }
        else
        {
            <!-- √âtape 2 : V√©rification MFA -->
            <MfaVerification 
                IsLoading="@isLoading"
                ErrorMessage="@errorMessage"
                ShowQrCode="@showQrCode"
                QrCodeBase64="@qrCodeBase64"
                SecretKey="@secretKey"
                OnMfaCodeSubmit="HandleMfaVerify"
                OnCancel="HandleCancelMfa" />
        }
    </div>
</div>

<style>
    .login-page {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 1rem;
    }

    .login-card {
        background: white;
        border-radius: 12px;
        padding: 2rem;
        box-shadow: 0 10px 40px rgba(0,0,0,0.2);
        width: 100%;
        max-width: 420px;
        animation: slideUp 0.4s ease-out;
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .logo-section {
        text-align: center;
        margin-bottom: 2rem;
    }

    .logo-section h2 {
        margin-bottom: 0.5rem;
        color: #333;
        font-size: 1.8rem;
    }

    .subtitle {
        color: #666;
        font-size: 0.9rem;
        margin: 0;
    }

    @@media (max-width: 480px) {
        .login-card {
            padding: 1.5rem;
        }

        .logo-section h2 {
            font-size: 1.5rem;
        }
    }
</style>

@code {
    // √âtat de la page
    private bool isLoading = false;
    private string? errorMessage;
    
    // √âtat MFA
    private bool requiresMfa = false;
    private string? mfaSessionId;
    private bool showQrCode = false;
    private string? qrCodeBase64;
    private string? secretKey;

    /// <summary>
    /// G√©rer la soumission du formulaire de login
    /// </summary>
    private async Task HandleLogin(AuthenticateRequest request)
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            var result = await AuthService.LoginAsync(request.Email, request.Password);

            if (result.Success && result.Data != null)
            {
                if (result.Data.RequiresMfa)
                {
                    // MFA requis - passer √† l'√©tape 2
                    requiresMfa = true;
                    mfaSessionId = result.Data.MfaSessionId;
                    
                    // Si c'est la premi√®re configuration MFA (QR code pr√©sent)
                    if (!string.IsNullOrEmpty(result.Data.QrCodeBase64))
                    {
                        showQrCode = true;
                        qrCodeBase64 = result.Data.QrCodeBase64;
                        secretKey = result.Data.SecretKey;
                    }
                }
                else
                {
                    // Login r√©ussi sans MFA - rediriger
                    await CompleteAuthentication();
                }
            }
            else
            {
                errorMessage = result.ErrorMessage  ?? "Identifiants invalides";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erreur de connexion: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    /// <summary>
    /// G√©rer la soumission du code MFA
    /// </summary>
    private async Task HandleMfaVerify(string code)
    {
        if (string.IsNullOrEmpty(mfaSessionId))
        {
            errorMessage = "Session MFA invalide";
            return;
        }

        isLoading = true;
        errorMessage = null;

        try
        {
            var result = await AuthService.VerifyMfaAsync(mfaSessionId, code);

            if (result.Success && result.Data?.Success == true)
            {
                // MFA v√©rifi√© avec succ√®s - rediriger
                await CompleteAuthentication();
            }
            else
            {
                errorMessage = result.Data?.Message ?? "Code MFA invalide";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erreur de v√©rification: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    /// <summary>
    /// Annuler le processus MFA et revenir au login
    /// </summary>
    private void HandleCancelMfa()
    {
        requiresMfa = false;
        mfaSessionId = null;
        showQrCode = false;
        qrCodeBase64 = null;
        secretKey = null;
        errorMessage = null;
    }

    /// <summary>
    /// Finaliser l'authentification et notifier Blazor
    /// </summary>
    private async Task CompleteAuthentication()
    {
        // Notifier le syst√®me d'authentification
        ((CustomAuthStateProvider)AuthStateProvider).NotifyUserAuthentication();
        
        // Rediriger vers la page d'accueil
        Navigation.NavigateTo("/");
    }
}