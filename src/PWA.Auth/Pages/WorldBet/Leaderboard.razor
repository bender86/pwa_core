@page "/worldbet/leaderboard"
@using PWA.Auth.Pages.WorldBet.Shared
@using dto.worldbet.Models
@layout WorldBetLayout
@inject ILeaderboardService LeaderboardService
@inject AuthenticationStateProvider AuthStateProvider
@attribute [Authorize]

<PageTitle>Classement</PageTitle>

<div class="leaderboard-page">
    <div class="page-header">
        <div>
            <h3>üèÜ Classement G√©n√©ral</h3>
            <p class="text-muted">Les meilleurs pronostiqueurs du tournoi</p>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
        </div>
    }

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary"></div>
            <p class="mt-2">Chargement du classement...</p>
        </div>
    }
    else if (!leaderboard.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Aucun joueur n'a encore marqu√© de points.
        </div>
    }
    else
    {
        <!-- Podium (Top 3) -->
        @if (leaderboard.Count >= 3)
        {
            <div class="podium-container">
                <div class="podium">
                    <!-- 2nd Place -->
                    <div class="podium-place second">
                        <div class="podium-medal">
                            <i class="bi bi-award-fill"></i>
                        </div>
                        <div class="podium-player">
                            <div class="player-avatar">
                                <span>@GetInitials(leaderboard[1].DisplayName)</span>
                            </div>
                            <div class="player-name">@leaderboard[1].DisplayName</div>
                            <div class="player-stats">
                                <div class="stat">
                                    <i class="bi bi-trophy-fill"></i> @leaderboard[1].TotalPoints pts
                                </div>
                                <div class="stat">
                                    <i class="bi bi-bullseye"></i> @leaderboard[1].CorrectScores exacts
                                </div>
                            </div>
                        </div>
                        <div class="podium-rank">2</div>
                    </div>

                    <!-- 1st Place -->
                    <div class="podium-place first">
                        <div class="podium-crown">
                            <i class="bi bi-gem"></i>
                        </div>
                        <div class="podium-medal">
                            <i class="bi bi-award-fill"></i>
                        </div>
                        <div class="podium-player">
                            <div class="player-avatar champion">
                                <span>@GetInitials(leaderboard[0].DisplayName)</span>
                            </div>
                            <div class="player-name">@leaderboard[0].DisplayName</div>
                            <div class="player-stats">
                                <div class="stat">
                                    <i class="bi bi-trophy-fill"></i> @leaderboard[0].TotalPoints pts
                                </div>
                                <div class="stat">
                                    <i class="bi bi-bullseye"></i> @leaderboard[0].CorrectScores exacts
                                </div>
                            </div>
                        </div>
                        <div class="podium-rank">1</div>
                    </div>

                    <!-- 3rd Place -->
                    <div class="podium-place third">
                        <div class="podium-medal">
                            <i class="bi bi-award-fill"></i>
                        </div>
                        <div class="podium-player">
                            <div class="player-avatar">
                                <span>@GetInitials(leaderboard[2].DisplayName)</span>
                            </div>
                            <div class="player-name">@leaderboard[2].DisplayName</div>
                            <div class="player-stats">
                                <div class="stat">
                                    <i class="bi bi-trophy-fill"></i> @leaderboard[2].TotalPoints pts
                                </div>
                                <div class="stat">
                                    <i class="bi bi-bullseye"></i> @leaderboard[2].CorrectScores exacts
                                </div>
                            </div>
                        </div>
                        <div class="podium-rank">3</div>
                    </div>
                </div>
            </div>
        }

        <!-- My Ranking Card -->
        @if (currentPlayerRanking != null)
        {
            <div class="my-ranking-card @(currentPlayerRanking.Rank <= 3 ? "top-three" : "")">
                <div class="ranking-header">
                    <h5>
                        <i class="bi bi-person-circle"></i> Votre Classement
                    </h5>
                </div>
                <div class="ranking-body">
                    <div class="rank-badge">
                        <span class="rank-number">#{currentPlayerRanking.Rank}</span>
                        @if (currentPlayerRanking.Rank <= 3)
                        {
                            <i class="bi bi-trophy-fill text-warning"></i>
                        }
                    </div>
                    <div class="ranking-stats">
                        <div class="stat-item">
                            <div class="stat-value">@currentPlayerRanking.TotalPoints</div>
                            <div class="stat-label">Points</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value">@currentPlayerRanking.PronosticsCount</div>
                            <div class="stat-label">Pronostics</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value">@currentPlayerRanking.CorrectScores</div>
                            <div class="stat-label">Scores exacts</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value">@GetSuccessRate(currentPlayerRanking).ToString("F1")%</div>
                            <div class="stat-label">Taux de r√©ussite</div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Full Leaderboard Table -->
        <div class="leaderboard-table-container">
            <h4 class="mb-3">Classement Complet</h4>
            <div class="table-responsive">
                <table class="table leaderboard-table">
                    <thead>
                        <tr>
                            <th>Rang</th>
                            <th>Joueur</th>
                            <th class="text-center">Points</th>
                            <th class="text-center d-none d-md-table-cell">Pronostics</th>
                            <th class="text-center d-none d-md-table-cell">Scores exacts</th>
                            <th class="text-center d-none d-lg-table-cell">Taux de r√©ussite</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var player in leaderboard)
                        {
                            <tr class="@(IsCurrentPlayer(player) ? "current-player" : "") @(player.Rank <= 3 ? "top-player" : "")">
                                <td>
                                    <div class="rank-cell">
                                        <span class="rank-number @GetRankClass(player.Rank)">
                                            @if (player.Rank <= 3)
                                            {
                                                <i class="bi bi-trophy-fill"></i>
                                            }
                                            #@player.Rank
                                        </span>
                                    </div>
                                </td>
                                <td>
                                    <div class="player-cell">
                                        <div class="player-avatar-small">
                                            @GetInitials(player.DisplayName)
                                        </div>
                                        <span class="player-name-text">
                                            @player.DisplayName
                                            @if (IsCurrentPlayer(player))
                                            {
                                                <span class="badge bg-primary ms-2">Vous</span>
                                            }
                                        </span>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <strong class="points-value">@player.TotalPoints</strong>
                                </td>
                                <td class="text-center d-none d-md-table-cell">
                                    @player.PronosticsCount
                                </td>
                                <td class="text-center d-none d-md-table-cell">
                                    <span class="badge bg-success">@player.CorrectScores</span>
                                </td>
                                <td class="text-center d-none d-lg-table-cell">
                                    <div class="progress" style="height: 20px;">
                                        <div class="progress-bar @GetProgressBarClass(GetSuccessRate(player))" 
                                             role="progressbar" 
                                             style="width: @GetSuccessRate(player)%"
                                             aria-valuenow="@GetSuccessRate(player)" 
                                             aria-valuemin="0" 
                                             aria-valuemax="100">
                                            @GetSuccessRate(player).ToString("F1")%
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@code {
    private List<LeaderboardDto> leaderboard = new();
    private LeaderboardDto? currentPlayerRanking;
    private int currentPlayerId = 0;

    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadLeaderboard();
    }

    private async Task LoadLeaderboard()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            // Get current user's player ID
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            var userIdClaim = user.FindFirst("id")?.Value;
            
            if (int.TryParse(userIdClaim, out int userId))
            {
                currentPlayerId = userId;
            }

            // Load leaderboard
            leaderboard = await LeaderboardService.GetLeaderboardAsync();

            // Find current player ranking
            currentPlayerRanking = leaderboard.FirstOrDefault(p => p.PlayerId == currentPlayerId);
        }
        catch (Exception ex)
        {
            errorMessage = $"Erreur lors du chargement du classement : {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private string GetInitials(string displayName)
    {
        if (string.IsNullOrWhiteSpace(displayName))
            return "??";

        var parts = displayName.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length >= 2)
            return $"{parts[0][0]}{parts[1][0]}".ToUpper();
        
        return displayName.Length >= 2 
            ? displayName.Substring(0, 2).ToUpper() 
            : displayName.ToUpper();
    }

    private string GetRankClass(int rank) => rank switch
    {
        1 => "rank-gold",
        2 => "rank-silver",
        3 => "rank-bronze",
        _ => ""
    };

    private string GetProgressBarClass(decimal successRate) => successRate switch
    {
        >= 75 => "bg-success",
        >= 50 => "bg-info",
        >= 25 => "bg-warning",
        _ => "bg-danger"
    };

    private decimal GetSuccessRate(LeaderboardDto player)
    {
        if (player.PronosticsCount == 0)
            return 0;

        // Calculate success rate: (correct scores + correct winners) / total pronostics * 100
        return Math.Round((decimal)(player.CorrectScores + player.CorrectWinners) / player.PronosticsCount * 100, 1);
    }

    private bool IsCurrentPlayer(LeaderboardDto player)
    {
        return player.PlayerId == currentPlayerId;
    }
}

