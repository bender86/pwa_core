        margin-bottom: 2rem;
        padding-bottom: 1.5rem;
        border-bottom: 2px solid #e0e0e0;
    }

    .profile-header h2 {
        margin: 0 0 0.5rem 0;
        color: #333;
        font-size: 1.8rem;
    }

    .subtitle {
        color: #666;
        font-size: 0.9rem;
        margin: 0;
    }

    .loading-spinner {
        text-align: center;
        padding: 3rem;
    }

    .profile-content {
        margin-top: 1.5rem;
    }

    .alert {
        padding: 1rem;
        border-radius: 8px;
        margin-bottom: 1.5rem;
    }

    .alert-success {
        background: #d4edda;
        border: 1px solid #c3e6cb;
        color: #155724;
    }

    .alert-danger {
        background: #f8d7da;
        border: 1px solid #f5c6cb;
        color: #721c24;
    }

    .password-section {
        margin-top: 2rem;
        padding: 1.5rem;
        background: #f8f9fa;
        border-radius: 8px;
