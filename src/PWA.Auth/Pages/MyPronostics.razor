@page "/worldbet/my-pronostics"
@using PWA.Auth.Pages.WorldBet.Shared
@using dto.worldbet.Models
@using dto.worldbet.Enums
@layout WorldBetLayout
@inject IPronosticService PronosticService
@inject ITournamentService TournamentService
@attribute [Authorize]

<PageTitle>Mes Pronostics</PageTitle>

<div class="my-pronostics-page">
    <div class="page-header">
        <div>
            <h3>⚡ Mes Pronostics</h3>
            <p class="text-muted">Suivez vos prédictions et vos points gagnés</p>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
        </div>
    }

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary"></div>
            <p class="mt-2">Chargement de vos pronostics...</p>
        </div>
    }
    else
    {
        <!-- Statistics -->
        <div class="row g-3 mb-4">
            <div class="col-md-3 col-6">
                <div class="stat-card">
                    <div class="stat-icon bg-primary">
                        <i class="bi bi-lightning-fill"></i>
                    </div>
                    <div class="stat-info">
                        <div class="stat-value">@pronostics.Count</div>
                        <div class="stat-label">Pronostics</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="stat-card">
                    <div class="stat-icon bg-success">
                        <i class="bi bi-trophy-fill"></i>
                    </div>
                    <div class="stat-info">
                        <div class="stat-value">@totalPoints</div>
                        <div class="stat-label">Points</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="stat-card">
                    <div class="stat-icon bg-info">
                        <i class="bi bi-check-circle-fill"></i>
                    </div>
                    <div class="stat-info">
                        <div class="stat-value">@exactScores</div>
                        <div class="stat-label">Scores exacts</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="stat-card">
                    <div class="stat-icon bg-warning">
                        <i class="bi bi-clock-fill"></i>
                    </div>
                    <div class="stat-info">
                        <div class="stat-value">@pendingCount</div>
                        <div class="stat-label">En attente</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filters -->
        <div class="filters mb-4">
            <div class="row g-3">
                <div class="col-md-4">
                    <select @bind="filterStatus" @bind:after="FilterPronostics" class="form-select">
                        <option value="">Tous les statuts</option>
                        <option value="pending">En attente</option>
                        <option value="correct">Gagnés</option>
                        <option value="incorrect">Perdus</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <select @bind="filterPhase" @bind:after="FilterPronostics" class="form-select">
                        <option value="">Toutes les phases</option>
                        @foreach (var phase in uniquePhases)
                        {
                            <option value="@phase">@phase</option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <div class="form-check form-switch pt-2">
                        <input class="form-check-input" type="checkbox" id="showOnlyPoints" 
                               @bind="showOnlyWithPoints" @bind:after="FilterPronostics">
                        <label class="form-check-label" for="showOnlyPoints">
                            Afficher uniquement les pronostics avec points
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pronostics List -->
        @if (!filteredPronostics.Any())
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> 
                @if (filterStatus != "" || filterPhase != "" || showOnlyWithPoints)
                {
                    <span>Aucun pronostic ne correspond à ces critères.</span>
                }
                else
                {
                    <span>Vous n'avez pas encore fait de pronostics. Rendez-vous sur la page <a href="/worldbet/matches">Matches</a> pour commencer !</span>
                }
            </div>
        }
        else
        {
            <div class="pronostics-grid">
                @foreach (var prono in filteredPronostics)
                {
                    var match = matchesDict.GetValueOrDefault(prono.MatchId);
                    if (match == null) continue;

                    <div class="pronostic-card @GetPronosticCardClass(match, prono)">
                        <div class="pronostic-header">
                            <div class="match-info">
                                <span class="badge bg-secondary">@match.PhaseName</span>
                                @if (!string.IsNullOrEmpty(match.GroupLetter))
                                {
                                    <span class="badge bg-info ms-1">Groupe @match.GroupLetter</span>
                                }
                                <span class="match-status ms-2">
                                    @GetMatchStatusBadge(match)
                                </span>
                            </div>
                            <div class="match-date">
                                <small class="text-muted">
                                    <i class="bi bi-calendar"></i> @match.ScheduledDate.ToString("dd/MM/yyyy HH:mm")
                                </small>
                            </div>
                        </div>

                        <div class="pronostic-body">
                            <div class="match-display">
                                <div class="team">
                                    <div class="team-name">@match.Team1Name</div>
                                    <div class="team-scores">
                                        <span class="prediction">@prono.PredictedScoreTeam1</span>
                                        @if (match.ScoreTeam1.HasValue)
                                        {
                                            <span class="actual @(prono.PredictedScoreTeam1 == match.ScoreTeam1 ? "correct" : "incorrect")">
                                                @match.ScoreTeam1
                                            </span>
                                        }
                                    </div>
                                </div>

                                <div class="separator">
                                    <span>-</span>
                                </div>

                                <div class="team">
                                    <div class="team-name">@match.Team2Name</div>
                                    <div class="team-scores">
                                        <span class="prediction">@prono.PredictedScoreTeam2</span>
                                        @if (match.ScoreTeam2.HasValue)
                                        {
                                            <span class="actual @(prono.PredictedScoreTeam2 == match.ScoreTeam2 ? "correct" : "incorrect")">
                                                @match.ScoreTeam2
                                            </span>
                                        }
                                    </div>
                                </div>
                            </div>

                            @if (match.Status == MatchStatus.Finished && prono.PointsEarned > 0)
                            {
                                <div class="points-earned">
                                    @if (prono.PointsEarned > 0)
                                    {
                                        <i class="bi bi-trophy-fill text-warning"></i>
                                        <span class="points">+@prono.PointsEarned pts</span>
                                        @if (IsExactScore(prono, match))
                                        {
                                            <span class="badge bg-success ms-2">
                                                <i class="bi bi-bullseye"></i> Score exact !
                                            </span>
                                        }
                                    }
                                    else
                                    {
                                        <i class="bi bi-x-circle-fill text-danger"></i>
                                        <span class="no-points">0 pt</span>
                                    }
                                </div>
                            }
                            else if (match.Status == MatchStatus.Live)
                            {
                                <div class="match-live">
                                    <span class="badge bg-success">
                                        <i class="bi bi-broadcast"></i> Match en cours
                                    </span>
                                </div>
                            }
                            else
                            {
                                <div class="match-pending">
                                    <i class="bi bi-clock"></i> En attente du résultat
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        }
    }
</div>

@code {
    private List<PronosticDto> pronostics = new();
    private List<PronosticDto> filteredPronostics = new();
    private Dictionary<int, MatchDto> matchesDict = new();
    private List<string> uniquePhases = new();

    private bool isLoading = true;
    private string? errorMessage;

    // Filters
    private string filterStatus = "";
    private string filterPhase = "";
    private bool showOnlyWithPoints = false;

    // Stats
    private int totalPoints = 0;
    private int exactScores = 0;
    private int pendingCount = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            var pronosticsTask = PronosticService.GetMyPronosticsAsync();
            var matchesTask = TournamentService.GetAllMatchesAsync();

            await Task.WhenAll(pronosticsTask, matchesTask);

            pronostics = await pronosticsTask;
            var matches = await matchesTask;

            matchesDict = matches.ToDictionary(m => m.MatchId);

            // Extract unique phases
            uniquePhases = pronostics
                .Select(p => matchesDict.GetValueOrDefault(p.MatchId)?.PhaseName)
                .Where(p => p != null)
                .Distinct()
                .OrderBy(p => p)
                .ToList()!;

            // Calculate stats
            CalculateStats();

            FilterPronostics();
        }
        catch (Exception ex)
        {
            errorMessage = $"Erreur lors du chargement : {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void CalculateStats()
    {
        totalPoints = pronostics.Sum(p => p.PointsEarned);
        exactScores = pronostics.Count(p => 
        {
            var match = matchesDict.GetValueOrDefault(p.MatchId);
            return match != null && IsExactScore(p, match);
        });
        pendingCount = pronostics.Count(p => 
        {
            var match = matchesDict.GetValueOrDefault(p.MatchId);
            return match != null && match.Status != MatchStatus.Finished;
        });
    }

    private void FilterPronostics()
    {
        filteredPronostics = pronostics.Where(p =>
        {
            var match = matchesDict.GetValueOrDefault(p.MatchId);
            if (match == null) return false;

            // Filter by status
            if (!string.IsNullOrEmpty(filterStatus))
            {
                if (filterStatus == "pending" && match.Status == MatchStatus.Finished)
                    return false;
                if (filterStatus == "correct" && (match.Status != MatchStatus.Finished || p.PointsEarned == 0))
                    return false;
                if (filterStatus == "incorrect" && (match.Status != MatchStatus.Finished || p.PointsEarned > 0))
                    return false;
            }

            // Filter by phase
            if (!string.IsNullOrEmpty(filterPhase) && match.PhaseName != filterPhase)
                return false;

            // Filter by points
            if (showOnlyWithPoints && p.PointsEarned == 0)
                return false;

            return true;
        })
        .OrderByDescending(p => 
        {
            var match = matchesDict.GetValueOrDefault(p.MatchId);
            return match?.ScheduledDate ?? DateTime.MinValue;
        })
        .ToList();
    }

    private string GetPronosticCardClass(MatchDto match, PronosticDto prono)
    {
        if (match.Status != MatchStatus.Finished)
            return "pending";

        if (prono.PointsEarned > 0)
            return IsExactScore(prono, match) ? "exact-score" : "correct";

        return "incorrect";
    }

    private bool IsExactScore(PronosticDto prono, MatchDto match)
    {
        return prono.PredictedScoreTeam1 == match.ScoreTeam1 
            && prono.PredictedScoreTeam2 == match.ScoreTeam2;
    }

    private RenderFragment GetMatchStatusBadge(MatchDto match) => match.Status switch
    {
        MatchStatus.Live => @<span class="badge bg-success"><i class="bi bi-broadcast"></i> En cours</span>,
        MatchStatus.Finished => @<span class="badge bg-primary">Terminé</span>,
        MatchStatus.Postponed => @<span class="badge bg-warning">Reporté</span>,
        _ => @<span class="badge bg-secondary">Programmé</span>
    };
}

