@* Pages/ForgotPassword.razor *@
@page "/forgot-password"
@using System.ComponentModel.DataAnnotations
@using dto.user.Models

<PageTitle>Forgot Password - MaesAuth</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body p-4">
                    @if (step == ForgotPasswordStep.EnterEmail)
                    {
                        <div class="text-center mb-4">
                            <i class="bi bi-key" style="font-size: 3rem; color: var(--bs-primary);"></i>
                            <h2 class="mt-3">Forgot Password?</h2>
                            <p class="text-muted">Enter your email address to reset your password</p>
                        </div>

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger">
                                <i class="bi bi-exclamation-triangle"></i> @errorMessage
                            </div>
                        }

                        <EditForm Model="@emailModel" OnValidSubmit="HandleEmailSubmit">
                            <DataAnnotationsValidator />

                            <div class="mb-3">
                                <label class="form-label">Email Address</label>
                                <InputText @bind-Value="emailModel.Email" 
                                           class="form-control" 
                                           placeholder="your@email.com"
                                           disabled="@isLoading" />
                                <ValidationMessage For="@(() => emailModel.Email)" class="text-danger small" />
                            </div>

                            <button type="submit" class="btn btn-primary w-100" disabled="@isLoading">
                                @if (isLoading)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                    <span>Sending...</span>
                                }
                                else
                                {
                                    <i class="bi bi-envelope"></i>
                                    <span>Send Reset Link</span>
                                }
                            </button>

                            <div class="text-center mt-3">
                                <a href="/login" class="text-decoration-none">
                                    <i class="bi bi-arrow-left"></i> Back to Login
                                </a>
                            </div>
                        </EditForm>
                    }
                    else if (step == ForgotPasswordStep.EmailSent)
                    {
                        <div class="text-center">
                            <i class="bi bi-envelope-check text-success" style="font-size: 4rem;"></i>
                            <h2 class="mt-3">Check Your Email</h2>
                            <p class="text-muted">
                                We've sent a password reset link to <strong>@emailModel.Email</strong>
                            </p>
                            <p class="text-muted small">
                                The link will expire in 1 hour. If you don't receive the email, check your spam folder.
                            </p>
                            <button class="btn btn-outline-primary mt-3" @onclick="GoToLogin">
                                <i class="bi bi-arrow-left"></i> Back to Login
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Inject] private IUserService UserService { get; set; } = default!;
    [Inject] private NavigationManager Navigation { get; set; } = default!;

    private ForgotPasswordEmailModel emailModel = new();
    private ForgotPasswordStep step = ForgotPasswordStep.EnterEmail;
    private bool isLoading = false;
    private string? errorMessage;

    private async Task HandleEmailSubmit()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            var response = await UserService.RequestPasswordReset(emailModel.Email);

            if (response.Success)
            {
                step = ForgotPasswordStep.EmailSent;
            }
            else
            {
                errorMessage = response.ErrorMessage ?? "Failed to send reset link";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void GoToLogin()
    {
        Navigation.NavigateTo("/login");
    }

    private enum ForgotPasswordStep
    {
        EnterEmail,
        EmailSent
    }

    private class ForgotPasswordEmailModel
    {
        [Required(ErrorMessage = "Email is required")]
        [EmailAddress(ErrorMessage = "Invalid email address")]
        public string Email { get; set; } = string.Empty;
    }
}