@page "/login"
@page "/user/login"
@inject IAuthService AuthService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Connexion - MaesAuth</PageTitle>

<div class="login-page">
    <div class="login-card">
        <div class="logo-section">
            <h2>üîê MaesAuth</h2>
            <p class="subtitle">Syst√®me d'authentification centralis√©</p>
        </div>

        @if (!requiresMfa)
        {
            <!-- √âtape 1 : Login classique -->
            <LoginForm 
                IsLoading="@isLoading"
                ErrorMessage="@errorMessage"
                OnLoginSubmit="HandleLogin" />
                
            <!-- Alternative avec un bouton -->
            <div class="register-section">
                <p>Pas encore de compte ?</p>
                <button class="btn btn-outline-primary btn-block" @onclick="NavigateToRegister">
                    ‚ûï Cr√©er un compte
                </button>
            </div>
        }
        else
        {
            <!-- √âtape 2 : V√©rification MFA -->
            <MfaVerification 
                IsLoading="@isLoading"
                ErrorMessage="@errorMessage"
                ShowQrCode="@showQrCode"
                QrCodeBase64="@qrCodeBase64"
                SecretKey="@secretKey"
                PromptMessage="Entrez le code de votre application d'authentification"
                OnMfaCodeSubmit="HandleMfaVerify"
                OnCancel="HandleCancelMfa" />
        }
    </div>
</div>

<style>
    .login-page {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
