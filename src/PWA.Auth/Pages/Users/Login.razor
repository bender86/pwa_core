        border-top: 1px solid #e0e0e0;
        text-align: center;
    }

    .register-section p {
        margin: 0 0 1rem 0;
        color: #666;
        font-size: 0.9rem;
    }

    .btn-outline-primary {
        color: #667eea;
        border: 2px solid #667eea;
        background: transparent;
        padding: 0.6rem 1.2rem;
        border-radius: 6px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s;
    }

    .btn-outline-primary:hover {
        background: #667eea;
        color: white;
    }
</style>

@code {
    // √âtat de la page
    private bool isLoading = false;
    private string? errorMessage;
    
    // √âtat MFA
    private bool requiresMfa = false;
    private string? mfaSessionId;
    private bool showQrCode = false;
    private string? qrCodeBase64;
    private string? secretKey;

    /// <summary>
    /// G√©rer la soumission du formulaire de login
    /// </summary>
    private async Task HandleLogin(AuthenticateRequest request)
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            var result = await AuthService.LoginAsync(request.Email, request.Password);

            if (result.Success && result.Data != null)
            {
                if (result.Data.RequiresMfa)
                {
                    // MFA requis - passer √† l'√©tape 2
                    requiresMfa = true;
                    mfaSessionId = result.Data.MfaSessionId;
                    
                    // Si c'est la premi√®re configuration MFA (QR code pr√©sent)
                    if (!string.IsNullOrEmpty(result.Data.QrCodeBase64))
                    {
                        showQrCode = true;
                        qrCodeBase64 = result.Data.QrCodeBase64;
                        secretKey = result.Data.SecretKey;
                    }
                }
                else
                {
                    // Login r√©ussi sans MFA - rediriger
                    await CompleteAuthentication();
                }
            }
            else
            {
                errorMessage = result.ErrorMessage ?? "Identifiants invalides";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erreur de connexion: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    /// <summary>
    /// G√©rer la soumission du code MFA
    /// </summary>
    private async Task HandleMfaVerify(string code)
    {
        if (string.IsNullOrEmpty(mfaSessionId))
        {
            errorMessage = "Session MFA invalide";
            return;
        }

        isLoading = true;
        errorMessage = null;

        try
        {
            var result = await AuthService.VerifyMfaAsync(mfaSessionId, code);

            if (result.Success && result.Data != null)
        {
            // ? Token prÔøΩsent = MFA vÔøΩrifiÔøΩ avec succÔøΩs
            if (!string.IsNullOrEmpty(result.Data.Token))
            {
                Console.WriteLine($"? MFA verified for {result.Data.FullName}");
                await CompleteAuthentication();
            }
            else
            {
                errorMessage = "Erreur lors de la gÔøΩnÔøΩration du token";
            }
        }
        else
        {
            // ? Utilise result.Message (de ApiResponse) au lieu de result.Data.ErrorMessage
            errorMessage = result.ErrorMessage ?? "Code MFA invalide";
        }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erreur de v√©rification: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    /// <summary>
    /// Annuler le processus MFA et revenir au login
    /// </summary>
    private void HandleCancelMfa()
    {
        requiresMfa = false;
        mfaSessionId = null;
        showQrCode = false;
        qrCodeBase64 = null;
        secretKey = null;
        errorMessage = null;
    }

    /// <summary>
    /// Finaliser l'authentification et notifier Blazor
    /// </summary>
    private async Task CompleteAuthentication()
    {
        // Notifier le syst√®me d'authentification
        ((CustomAuthStateProvider)AuthStateProvider).NotifyUserAuthentication();
        
        // Rediriger vers la page d'accueil
        Navigation.NavigateTo("/");
    }

    /// <summary>
    /// ‚úÖ Naviguer vers la page d'inscription
    /// </summary>
    private void NavigateToRegister()
    {
        Navigation.NavigateTo("/register");
    }
}