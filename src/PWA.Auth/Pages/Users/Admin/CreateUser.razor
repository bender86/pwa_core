@* Pages/Admin/CreateUser.razor *@
@page "/admin/users/new"
@attribute [Authorize(Roles = "Admin")]
@using dto.user.Models
@using dto.common.Enums
@using PWA.Auth.Models

<PageTitle>Create User - MaesAuth</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="d-flex align-items-center mb-4">
                <button class="btn btn-outline-secondary me-3" @onclick="GoBack">
                    <i class="bi bi-arrow-left"></i> Back
                </button>
                <h1 class="mb-0">Create New User</h1>
            </div>

            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i> @successMessage
                    <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
                </div>
            }

            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="alert alert-info mb-4">
                        <i class="bi bi-info-circle"></i>
                        <strong>Invitation Process:</strong>
                        <ul class="mb-0 mt-2">
                            <li>The user will receive an email invitation</li>
                            <li>They must click the link to set their password</li>
                            <li>Their account will be activated once they complete setup</li>
                        </ul>
                    </div>

                    <UserForm Mode="FormMode.Create"
                              OnSubmit="HandleCreateUser"
                              OnCancel="GoBack"
                              IsLoading="isLoading"
                              ErrorMessage="@errorMessage"
                              ShowAdminOptions="true"
                              RequirePassword="false" />
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Inject] private IUserService UserService { get; set; } = default!;
    [Inject] private NavigationManager Navigation { get; set; } = default!;

    private bool isLoading = false;
    private string? errorMessage;
    private string? successMessage;

    private async Task HandleCreateUser(UserFormModel formData)
    {
        isLoading = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            var request = new CreateUserInvitationRequest
            {
                Email = formData.Email,
                FirstName = formData.FirstName,
                LastName = formData.LastName,
                IsAdmin = formData.IsAdmin
            };

            var response = await UserService.CreateUserInvitation(request);

            if (response.Success)
            {
                successMessage = $"Invitation sent to {formData.Email}. The user will receive an email to complete their registration.";
                
                // Rediriger vers la liste apr√®s 3 secondes
                await Task.Delay(3000);
                Navigation.NavigateTo("/admin/users");
            }
            else
            {
                errorMessage = response.ErrorMessage ?? "Failed to create user invitation";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/admin/users");
    }
}