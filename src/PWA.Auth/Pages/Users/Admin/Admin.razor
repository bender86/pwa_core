@page "/admin"
@attribute [Authorize(Roles = "Admin")]

<PageTitle>Administration - MaesAuth</PageTitle>

<div class="container mt-5">
    <h1 class="mb-4">Administration</h1>
    
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm" style="cursor: pointer;" @onclick="NavigateToManageUsers">
                <div class="card-body text-center">
                    <i class="bi bi-people" style="font-size: 3rem; color: var(--bs-primary);"></i>
                    <h5 class="card-title mt-3">Manage Users</h5>
                    <p class="card-text text-muted">View and manage user accounts</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm" style="opacity: 0.6;">
                <div class="card-body text-center">
                    <i class="bi bi-grid-3x3" style="font-size: 3rem; color: var(--bs-secondary);"></i>
                    <h5 class="card-title mt-3">Applications</h5>
                    <p class="card-text text-muted">Coming soon...</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm" style="opacity: 0.6;">
                <div class="card-body text-center">
                    <i class="bi bi-gear" style="font-size: 3rem; color: var(--bs-secondary);"></i>
                    <h5 class="card-title mt-3">System Settings</h5>
                    <p class="card-text text-muted">Coming soon...</p>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Inject] private NavigationManager Navigation { get; set; } = default!;

    private void NavigateToManageUsers()
    {
        Navigation.NavigateTo("/admin/users");
    }
}