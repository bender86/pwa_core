<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    @if (context.User.Identity?.IsAuthenticated != true)
                    {
                        <RedirectToLogin />
                    }
                    else
                    {
                        <p role="alert">Vous n'�tes pas autoris� � acc�der � cette ressource.</p>
                    }
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>Non trouv�</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <p role="alert">Sorry nothing to this address</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

@code {
    // Composant pour rediriger vers /login si non authentifi�
    public class RedirectToLogin : ComponentBase
    {
        [Inject] private NavigationManager Navigation { get; set; } = null!;

        protected override void OnInitialized()
        {
            // Rediriger vers /login si on est � la racine
            var uri = new Uri(Navigation.Uri);
            if (uri.AbsolutePath == "/")
            {
                Navigation.NavigateTo("/login", replace: true);
            }
        }
    }
}