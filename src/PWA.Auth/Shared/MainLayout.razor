@inherits LayoutComponentBase
@implements IDisposable
@using dto.auth.Models
@using dto.user.Models
@inject IAuthService AuthService
@inject NavigationManager Navigation

<div class="page">
    <nav class="navbar @(isWorldBetSection ? "worldbet-navbar" : "")">
        <div class="nav-brand-section">
            @if (isWorldBetSection)
            {
                <a href="/" class="nav-brand-link" title="Retour au dashboard">
                    <i class="bi bi-arrow-left"></i>
                </a>
                <span class="nav-brand">üèÜ WorldBet</span>
            }
            else
            {
                <a href="/" class="nav-brand">üîê MaesAuth</a>
            }
        </div>
        
        <div class="nav-links">
            <AuthorizeView>
                <Authorized>
                    <div class="user-menu" tabindex="0">
                        <div class="user-info">
                            <span class="user-avatar">üë§</span>
                            <span class="user-name">@userName</span>
                            <span class="dropdown-arrow">‚ñº</span>
                        </div>
                        
                        <div class="dropdown-menu">
                            <a href="/profile" class="dropdown-item">
                                <span class="item-icon">üë§</span>
                                <span>Mon Profil</span>
                            </a>
                            @if (isAdmin)
                            {
                                <a href="/admin" class="dropdown-item">
                                    <span class="item-icon">‚öôÔ∏è</span>
                                    <span>Administration</span>
                                </a>
                            }
                            <div class="dropdown-divider"></div>
                            <button class="dropdown-item logout" @onclick="HandleLogout" type="button">
                                <span class="item-icon">üö™</span>
                                <span>D√©connexion</span>
                            </button>
                        </div>
                    </div>
                </Authorized>
            </AuthorizeView>
        </div>
    </nav>
    
    <main>
        @Body
    </main>
</div>

@code {
    [Inject] private AuthenticationStateProvider AuthStateProvider { get; set; } = null!;
    
    private string userName = "Utilisateur";
    private bool showDropdown = false;
    private bool isAdmin = false;
    private bool isWorldBetSection = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadUserName();
        ((CustomAuthStateProvider)AuthStateProvider).AuthenticationStateChanged += OnAuthStateChanged;
        
        // √âcouter les changements de navigation
        Navigation.LocationChanged += OnLocationChanged;
        CheckCurrentSection();
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        CheckCurrentSection();
        StateHasChanged();
    }

    private void CheckCurrentSection()
    {
        isWorldBetSection = Navigation.Uri.Contains("/worldbet");
    }

    private async void OnAuthStateChanged(Task<AuthenticationState> task)
    {
        await LoadUserName();
        StateHasChanged();
    }

    private async Task LoadUserName()
    {
        try
        {
            var user = await AuthService.GetCurrentUserAsync();
            
            if (user != null)
            {
                isAdmin = user.Admin ?? false;
                
                if (!string.IsNullOrEmpty(user.FirstName) || !string.IsNullOrEmpty(user.LastName))
                {
                    userName = $"{user.FirstName} {user.LastName}".Trim();
                }
                else
                {
                    userName = user.Email?.Split('@')[0] ?? "Utilisateur";
                }
            }
            else
            {
                userName = "Utilisateur";
                isAdmin = false;
            }
        }
        catch
        {
            userName = "Utilisateur";
            isAdmin = false;
        }
    }

    private async Task HandleLogout()
    {
        showDropdown = false;
        await AuthService.LogoutAsync();
        ((CustomAuthStateProvider)AuthStateProvider).NotifyUserLogout();
        Navigation.NavigateTo("/login");
    }

    public void Dispose()
    {
        ((CustomAuthStateProvider)AuthStateProvider).AuthenticationStateChanged -= OnAuthStateChanged;
        Navigation.LocationChanged -= OnLocationChanged;
    }
}

